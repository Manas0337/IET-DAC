            String ename = sc.next();
            double salary = sc.nextDouble();
            employees[count++] = new Employee(empid, ename, salary);

            // Insert new employee using Insertion Sort logic
            insertionSort(employees, count);
        }

        System.out.println("\nEmployees after Insertion Sort (with new entries):");
        printEmployees(employees, count);

        sc.close();
    }

