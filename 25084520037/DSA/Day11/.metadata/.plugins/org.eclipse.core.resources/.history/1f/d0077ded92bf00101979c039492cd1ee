package com.demo.test;
import com.demo.assignments.*;
import arrays.ArrayFunctions;
import java.util.*;
public class TestArrays {
	
	ArraysFunctions af = new ArraysFunctions(); 

	public static void main(String[] args) {
	        Scanner sc = new Scanner(System.in);

	        // Input array
	        System.out.print("Enter size of array: ");
	        int size = sc.nextInt();
	        int[] arr = new int[size];
            System.out.println("Enter " + size + " numbers:");
	        for (int i = 0; i < size; i++) {
	            arr[i] = sc.nextInt();
	        }

	        // 1. Digit sums
	        System.out.println("\nSum of digits:");
	        for (int num : arr) {
	            System.out.println(num + " -> " + af.(num));
	        }

	        // 2. Factorials of primes
	        System.out.println("\nFactorials of prime numbers:");
	        for (int num : arr) {
	            if (ArrayFunctions.isPrime(num)) {
	                System.out.println(num + " -> " + ArrayFunctions.factorial(num));
	            }
	        }

	        // 3. Maximum prime
	        int maxPrime = ArrayFunctions.maxPrime(arr);
	        System.out.println("\nMaximum prime number: " + (maxPrime == -1 ? "No prime found" : maxPrime));

	        // 4. Copy array with condition
	        int[] copyArr = new int[size];
	        for (int i = 0; i < size; i++) {
	            if (ArrayFunctions.isPrime(arr[i]) && arr[i] < 5) {
	                copyArr[i] = ArrayFunctions.reverseNumber(arr[i]);
	            } else {
	                copyArr[i] = arr[i];
	            }
	        }
	        System.out.println("\nCopied Array:");
	        for (int num : copyArr) {
	            System.out.print(num + " ");
	        }

	        sc.close();
	    }
	}
	